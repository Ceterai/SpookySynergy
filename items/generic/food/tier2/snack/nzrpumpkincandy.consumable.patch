// Patches for the Pumpkin Candy from Nazar's Halloween mod to make it more similar to candy from other mods.
[
    // Teaches the Candy Bowl crafting recipe upon pickup, similar to candy from the Starbound Halloween mod.
    [
        {
            "op": "test",
            "path": "/learnBlueprintsOnPickup"
        },
        {
            "op": "add",
            "path": "/learnBlueprintsOnPickup/-",
            "value": "candybowl"
        }
    ],
    [
        {
            "op": "test",
            "path": "/learnBlueprintsOnPickup",
            "inverse": true
        },
        {
            "op": "add",
            "path": "/learnBlueprintsOnPickup",
            "value": [ "candybowl" ]
        }
    ],
    [
        {
            "op": "test",
            "path": "/effects"
        },
        {
            "op": "replace",
            "path": "/effects",
            "value": [ [
                {
                    "effect" : "runboostfood",
                    "duration" : 60
                },
                {
                    "effect" : "maxenergyscalingboostfood",
                    "duration" : 60
                }
            ] ]
        }
    ],
    [
        {
            "op": "test",
            "path": "/price"
        },
        {
            "op": "replace",
            "path": "/price",
            "value": 120  // Though it rots faster than Sweet Candy, its effects last 2 times as long, so it should be slightly more expensive.
        }
    ],
    [
        {
            "op": "test",
            "path": "/rottingMultiplier"
        },
        {
            "op": "replace",
            "path": "/rottingMultiplier",
            "value": 2.0  // Gets older slower than regular food items, but not as slow as sugar-only candy from other mods.
        }
    ],
    [
        {
            "op": "test",
            "path": "/blockingEffects"
        },
        {
            "op": "replace",
            "path": "/blockingEffects",
            "value": [ ]  // Eat as many as you want! Matches candy from other mods.
        }
    ],
    [
        {
            "op": "test",
            "path": "/foodValue"
        },
        {
            "op": "replace",
            "path": "/foodValue",
            "value": 10  // Smaller food value. It's just a small piece of candy after all.
        }
    ],
    [
        {
            "op": "test",
            "path": "/maxStack"
        },
        {
            "op": "replace",
            "path": "/maxStack",
            "value": 100
        }
    ],
    [
        {
            "op": "test",
            "path": "/emote",
            "inverse": true
        },
        {
            "op": "add",
            "path": "/emote",
            "value": "happy"  // Matches Harrowing Candy from Elithian Alliance mod.
        }
    ]
]
