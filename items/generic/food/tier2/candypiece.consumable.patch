// Patches for the Piece of Candy from Starbound Halloween Mod to make it more similar to candy from other mods.
[
    [
        {
            "op": "test",
            "path": "/shortdescription"
        },
        {
            "op": "replace",
            "path": "/shortdescription",
            "value": "Sweet Candy"  // Follows the pattern of candy items from other mods: Spooky Candy, Pumpkin Candy, Harrowing Candy, etc.
        }
    ],
    [
        {
            "op": "test",
            "path": "/rarity"
        },
        {
            "op": "replace",
            "path": "/rarity",
            "value": "Common"
        }
    ],
    [
        {
            "op": "test",
            "path": "/price"
        },
        {
            "op": "replace",
            "path": "/price",
            "value": 90
        }
    ],
    [
        {
            "op": "test",
            "path": "/blockingEffects"
        },
        {
            "op": "replace",
            "path": "/blockingEffects",
            "value": [ ]  // Eat as many as you want! Matches candy from other mods.
        }
    ],
    [
        {
            "op": "test",
            "path": "/foodValue"
        },
        {
            "op": "replace",
            "path": "/foodValue",
            "value": 10  // Smaller food value. It's just a small piece of candy after all.
        }
    ],
    [
        {
            "op": "test",
            "path": "/maxStack"
        },
        {
            "op": "replace",
            "path": "/maxStack",
            "value": 100
        }
    ],
    [
        {
            "op": "test",
            "path": "/emote",
            "inverse": true
        },
        {
            "op": "add",
            "path": "/emote",
            "value": "happy"  // Matches Harrowing Candy from Elithian Alliance mod.
        }
    ]
]
