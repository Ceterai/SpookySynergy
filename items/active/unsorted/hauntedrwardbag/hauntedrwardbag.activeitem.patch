// Patches for the Haunted Bag from The Spooky Scary Halloween Special mod:
[
    // Fixes its script by using a vanilla Reward Bag script.
    [
        {
            "op": "test",
            "path": "/scripts"
        },
        {
            "op": "replace",
            "path": "/scripts",
            "value": [
                "/items/active/unsorted/rewardbag/rewardbag.lua"
            ]
        }
    ],

    // Increases its max stack to 1000.
    [
        {
            "op": "test",
            "path": "/maxStack"
        },
        {
            "op": "replace",
            "path": "/maxStack",
            "value": 1000
        }
    ],

    // Makes it more similar to the Harrowing Cache from Elithian Alliance mod.
    [
        {
            "op": "test",
            "path": "/price"
        },
        {
            "op": "replace",
            "path": "/price",
            "value": 250  // To make it the same price as the Harrowing Cache from Elithian Alliance
        }
    ]
]
